.calendar-view-mode-selector { display: flex; justify-content: center; background-color: var(--button-bg-color); border-radius: 12px; padding: 4px; margin-bottom: 20px; }
.calendar-view-mode-selector button { flex: 1; padding: 8px 12px; border-radius: 9px; font-weight: 500; color: var(--text-secondary-color); }
.calendar-view-mode-selector button.active { background-color: var(--bg-secondary-color); color: var(--text-color); box-shadow: 0 1px 4px rgba(0,0,0,0.1); }
.calendar-days-of-week { display: grid; grid-template-columns: repeat(7, 1fr); text-align: center; margin-bottom: 10px; color: var(--text-secondary-color); font-weight: 500; }
.calendar-grid { display: grid; gap: 5px; }
.calendar-grid.view-mode-month, .calendar-grid.view-mode-week { grid-template-columns: repeat(7, 1fr); }
.calendar-grid.view-mode-day3 { grid-template-columns: repeat(3, 1fr); }
.calendar-day { min-height: 120px; border: 1px solid var(--border-color); border-radius: 22px; padding: 8px; display: flex; flex-direction: column; }
.calendar-day.not-current-month { opacity: 0.3; }
.calendar-day.is-today .day-number { background-color: var(--primary-color); color: white; }
.day-header { display: flex; align-items: center; gap: 6px; margin-bottom: 4px; }
.day-name-full { font-weight: 500; color: var(--text-secondary-color); }
.day-number { font-size: 0.8rem; font-weight: 500; width: 24px; height: 24px; display: flex; align-items: center; justify-content: center; border-radius: 50%; }
.calendar-goals { overflow-y: auto; font-size: 0.75rem; flex-grow: 1; }
.calendar-goals::-webkit-scrollbar { width: 4px; }
.calendar-goals::-webkit-scrollbar-track { background: transparent; }
.calendar-goals::-webkit-scrollbar-thumb { background-color: var(--border-color); border-radius: 2px; }
.calendar-goal-item { background-color: var(--primary-color); color: white; padding: 2px 6px; border-radius: 10px; margin-bottom: 4px; cursor: pointer; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; }
.calendar-goal-item.completed { background-color: var(--button-bg-color); color: var(--text-secondary-color); text-decoration: line-through; opacity: 0.7; }

/* Version Info Modal */
.version-info-modal {
    padding: 24px;
}
.version-info-header {
    text-align: center;
    margin-bottom: 24px;
}
.version-info-header h2 {
    font-size: 1.5rem;
    font-weight: 600;
}
.version-info-header p {
    color: var(--text-secondary-color);
    font-size: 0.9rem;
}
.version-info-body {
    display: flex;
    flex-direction: column;
    gap: 24px;
    flex-grow: 1;
    overflow-y: auto;
    padding: 0 4px; /* For scrollbar */
}
.changelog-item {
    display: flex;
    align-items: flex-start;
    gap: 16px;
}
.changelog-icon {
    flex-shrink: 0;
    width: 40px;
    height: 40px;
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: var(--icon-bg, var(--primary-color));
    color: white;
}
.changelog-icon svg {
    width: 22px;
    height: 22px;
}
.changelog-text h3 {
    font-size: 1.1rem;
    margin-bottom: 4px;
}
.changelog-text p {
    color: var(--text-secondary-color);
    font-size: 0.95rem;
}
.version-info-modal .modal-buttons {
    margin-top: 24px;
}
.version-info-modal .modal-buttons button {
    width: 100%;
    padding: 14px;
    background-color: var(--primary-color);
    color: white;
    font-size: 1rem;
    font-weight: 600;
    border-radius: 22px;
}


/* Responsive Design */
@media (max-width: 768px) {
    .calendar-grid.view-mode-day3 { grid-template-columns: 1fr; }
    .calendar-days-of-week { display: none; }
    .calendar-grid.view-mode-week { grid-template-columns: 1fr; }
    .view-mode-week .day-header::before, .view-mode-month .day-header::before { content: attr(data-day-name); margin-right: 6px; font-weight: 500; color: var(--text-secondary-color); }
}

@media (max-width: 480px) {
  #root { padding-top: 0; min-height: -webkit-fill-available; }
  .main-page-layout { min-height: 100vh; min-height: -webkit-fill-available; }
  .container { padding: 12px; padding-top: 30px; }
  .header-title-group h1 { font-size: 1.6rem; }
  .header-title-group { gap: 8px; }
  .header-inline-actions { gap: 4px; }
  .header-icon-button svg { width: 22px; height: 22px; }

  .modal-content:not(.settings-modal) { width: calc(100% - 24px); }
  .calendar-view-mode-selector .calendar-view-button-month { display: none; }
}

/* Nova 독창적인 애니메이션 효과들 */

/* 플로팅 파티클 애니메이션 */
@keyframes float {
  0%, 100% { transform: translateY(0px) rotate(0deg); }
  33% { transform: translateY(-20px) rotate(120deg); }
  66% { transform: translateY(10px) rotate(240deg); }
}

@keyframes pulse-glow {
  0%, 100% { box-shadow: var(--drop-shadow), 0 0 20px rgba(120, 119, 198, 0.3); }
  50% { box-shadow: var(--drop-shadow), 0 0 30px rgba(120, 119, 198, 0.6); }
}

/* 특별한 호버 효과 */
.special-glow:hover {
  animation: pulse-glow 2s ease-in-out infinite;
}

/* 모달 등장 애니메이션 */
@keyframes modal-slide-up {
  from {
    opacity: 0;
    transform: translateY(100px) scale(0.9);
    backdrop-filter: blur(0px);
  }
  to {
    opacity: 1;
    transform: translateY(0) scale(1);
    backdrop-filter: blur(20px);
  }
}

.modal-content {
  animation: modal-slide-up 0.6s cubic-bezier(0.25, 0.46, 0.45, 0.94);
}

/* 텍스트 그라디언트 효과 */
.gradient-text {
  background: var(--primary-color);
  -webkit-background-clip: text;
  -webkit-text-fill-color: transparent;
  background-clip: text;
  font-weight: 600;
}

/* 로딩 애니메이션 */
@keyframes loading-shimmer {
  0% { background-position: -468px 0; }
  100% { background-position: 468px 0; }
}

.loading-shimmer {
  background: linear-gradient(90deg, #f0f0f0 25%, #e0e0e0 50%, #f0f0f0 75%);
  background-size: 400% 100%;
  animation: loading-shimmer 1.2s ease-in-out infinite;
}

/* 다크모드 추가 효과 */
body.dark-mode li:hover {
  box-shadow: 
    0 15px 40px rgba(233, 69, 96, 0.3),
    0 0 20px rgba(233, 69, 96, 0.2);
}

body.dark-mode button:hover {
  box-shadow: 
    0 12px 40px rgba(233, 69, 96, 0.4),
    0 0 25px rgba(233, 69, 96, 0.3);
}

/* 스크롤바 스타일링 */
::-webkit-scrollbar {
  width: 6px;
}

::-webkit-scrollbar-track {
  background: transparent;
}

::-webkit-scrollbar-thumb {
  background: var(--primary-color);
  border-radius: 3px;
  opacity: 0.7;
}

::-webkit-scrollbar-thumb:hover {
  opacity: 1;
}

/* Home screen background effect when a modal is open */
.page-content {
    display: flex;
    flex-direction: column;
    flex-grow: 1;
    background: var(--main-bg-color);
    transition: filter 0.5s cubic-bezier(0.2, 0.8, 0.2, 1);
    will-change: filter;
}

.page-content.modal-open {
    /* The backdrop handles the dimming effect. No changes needed here. */
    pointer-events: none;
}

/* On mobile, modals are full-screen, so this effect is not needed. */
@media (max-width: 600px) {
    .page-content.modal-open {
        transform: none;
        border-radius: 0;
        box-shadow: none;
    }
}