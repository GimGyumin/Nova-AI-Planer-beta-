/* Dynamic Gradient Background */
body.bg-dynamic {
  background: linear-gradient(135deg, #ff00c1, #9a00ff, #00b8ff, #00ff95);
  background-size: 400% 400%;
  animation: liquidGradient 15s ease infinite;
}

@keyframes liquidGradient {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
}

#root {
  width: 100%;
  min-height: 100vh;
  display: flex;
  justify-content: center;
  padding-top: 40px;
}

/* Nova 독창적인 UI Elements */
button {
  font-family: inherit;
  cursor: pointer;
  border: var(--glass-border);
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  color: var(--button-text-color);
  font-size: 1rem;
  font-weight: 500;
  border-radius: 16px;
  padding: 12px 24px;
  box-shadow: var(--drop-shadow);
  transition: all 0.3s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
}

button::before {
  content: '';
  position: absolute;
  top: 0;
  left: -100%;
  width: 100%;
  height: 100%;
  background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
  transition: left 0.5s ease;
}

button:hover {
  transform: translateY(-2px) scale(1.02);
  box-shadow: 0 12px 40px rgba(31, 38, 135, 0.25);
}

button:hover::before {
  left: 100%;
}

button:active, .more-button:active, .ai-info-button:active {
  transform: scale(0.96) !important;
  opacity: 0.8;
  transition-duration: 0.05s;
}

button:disabled {
  opacity: 0.5;
  cursor: not-allowed;
  transform: none;
  filter: none;
}
button:disabled:active {
  transform: none !important;
  opacity: 0.5;
}


input, textarea {
  font-family: inherit;
  width: 100%;
  padding: 14px;
  border: 1px solid var(--border-color);
  background-color: var(--input-bg-color);
  color: var(--text-color);
  font-size: 1rem;
  border-radius: 22px;
}
input::placeholder, textarea::placeholder {
  color: var(--text-secondary-color);
  opacity: 0.8;
}

.input-group {
    margin-bottom: 16px;
}

input:focus, textarea:focus {
  outline: none;
  border-color: var(--primary-color);
  box-shadow: 0 0 0 3px rgba(0, 122, 255, 0.4);
}

.input-error {
    border-color: var(--danger-color) !important;
}

.input-error:focus {
    box-shadow: 0 0 0 3px rgba(255, 59, 48, 0.4);
}

hr {
  border: none;
  height: 1px;
  background-color: var(--border-color);
  margin: 12px 0;
}

.error-message {
  color: var(--danger-color);
  text-align: center;
  padding: 12px;
  margin-bottom: 16px;
  background: rgba(255, 59, 48, 0.2);
  border: 1px solid rgba(255, 59, 48, 0.4);
  border-radius: 22px;
}

.field-error-message {
    display: flex;
    align-items: center;
    gap: 6px;
    color: var(--danger-color);
    font-size: 0.8rem;
    margin-top: 6px;
    padding-left: 4px;
}
.field-error-message svg {
    width: 14px;
    height: 14px;
}

.ai-error {
  margin-top: 1rem;
}

/* Main App Layout */
.main-page-layout {
  display: flex;
  flex-direction: column;
  width: 100%;
  min-height: calc(100vh - 40px);
}

.main-page-layout .container {
  flex-grow: 1;
}

/* Main App Container */
.container {
  width: 100%;
  max-width: 700px;
  margin: 0 auto;
  padding: 20px;
}

header {
  display: grid;
  grid-template-columns: 1fr auto 1fr;
  align-items: center;
  margin-bottom: 20px;
}

.header-title-group {
    grid-column: 2 / 3;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 12px;
}

.header-title-group h1 {
  font-size: 1.8rem;
  font-weight: 600;
  letter-spacing: -0.03em;
  white-space: nowrap;
}

.header-inline-actions {
  display: flex;
  align-items: center;
  gap: 8px;
}

.header-icon-button {
  color: var(--text-color);
  padding: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  width: 32px;
  height: 32px;
}

.header-icon-button svg {
  width: 24px;
  height: 24px;
}

.header-left, .header-right {
    display: flex;
    align-items: center;
    width: 80px;
}

.header-left {
    justify-content: flex-start;
    grid-column: 1 / 2;
}

.header-right {
    justify-content: flex-end;
    grid-column: 3 / 4;
}

.header-action-button {
    font-size: 1rem;
    font-weight: 500;
    padding: 8px;
    width: 80px;
    text-align: center;
}
.header-action-button.destructive {
    color: var(--danger-color);
    font-weight: 600;
}

/* Popovers */
.filter-sort-container {
  position: relative;
}

.more-button, .ai-info-button {
  display: flex;
  align-items: center;
  justify-content: center;
  background-color: var(--button-bg-color);
  color: var(--text-color);
  width: 40px;
  height: 40px;
  border-radius: 50%;
  border: 1px solid var(--border-color);
  transition: all 0.2s ease;
}

.ai-info-button svg {
    stroke: var(--primary-color);
}

@keyframes popover-in {
    from {
        opacity: 0;
        transform: scale(0.9) translateY(-10px);
    }
    to {
        opacity: 1;
        transform: scale(1) translateY(0);
    }
}

.profile-popover {
  position: absolute;
  top: calc(100% + 8px);
  right: 0;
  width: 260px;
  z-index: 990;
  padding: 6px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  
  background: var(--bg-secondary-color);
  box-shadow: var(--drop-shadow-popover);
  border: 1px solid var(--border-color);
  border-radius: 28px;
  overflow: hidden;
  
  transform-origin: top right;
  animation: popover-in 0.2s cubic-bezier(0.25, 1, 0.5, 1);
}

.filter-sort-popover {
  width: 240px;
  right: 0;
}

.popover-section {
  overflow: hidden;
  background-color: transparent; /* Section is just for grouping items */
}

.popover-section h4 {
  padding: 8px 18px 4px 18px;
  font-size: 0.8rem;
  font-weight: 600;
  color: var(--text-secondary-color);
  text-transform: uppercase;
}

.popover-action-button {
  display: flex;
  align-items: center;
  gap: 12px;
  width: 100%;
  text-align: left;
  padding: 11px 16px;
  color: var(--text-color);
  font-size: 0.95rem;
  background-color: transparent;
  border-bottom: 0.5px solid var(--popover-separator-color);
  transition: background-color 0.1s ease-in-out, transform 0.1s ease;
  border-radius: 20px;
}
.popover-action-button.with-icon {
    padding-left: 12px;
}
.popover-button-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--primary-color);
}
.popover-button-icon svg {
    width: 20px;
    height: 20px;
}

.popover-section .popover-action-button:last-child {
  border-bottom: none;
}
.popover-section .popover-action-button:first-child {
    font-weight: 500;
}


.popover-action-button:hover {
  background-color: var(--button-bg-color);
  transform: none;
}
.popover-action-button:active {
  transform: none !important; /* Override global active style for popover buttons */
  background-color: var(--border-color);
}

.popover-action-button.active {
  color: var(--primary-color);
  font-weight: 600;
}

.popover-action-button.destructive {
  color: var(--danger-color);
  font-weight: 500;
}
.popover-action-button.destructive:hover {
  background-color: rgba(255, 59, 48, 0.1);
}

.popover-action-button > span:first-of-type:not(.popover-button-icon) {
  flex-grow: 1;
}

.popover-action-button svg {
  width: 20px;
  height: 20px;
  stroke-width: 1.8;
  color: var(--text-color);
}
.popover-action-button.active svg {
  color: var(--primary-color);
}


/* Todo List */
ul {
  list-style-type: none;
  margin-top: 20px;
}

li {
  display: flex;
  align-items: stretch;
  margin-bottom: 16px;
  background: var(--glass-bg);
  backdrop-filter: var(--glass-blur);
  -webkit-backdrop-filter: var(--glass-blur);
  border: var(--glass-border);
  box-shadow: var(--drop-shadow);
  border-radius: 20px;
  transition: all 0.4s cubic-bezier(0.25, 0.46, 0.45, 0.94);
  position: relative;
  overflow: hidden;
  transform-origin: center;
}

li::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 2px;
  background: var(--primary-color);
  transform: scaleX(0);
  transform-origin: left;
  transition: transform 0.3s ease;
}

li:hover {
  transform: translateY(-3px) scale(1.01);
  box-shadow: 0 15px 40px rgba(31, 38, 135, 0.2);
}

li:hover::before {
  transform: scaleX(1);
}
li.selection-mode {
    cursor: pointer;
}
li.selection-mode.selected {
    background-color: var(--primary-color);
    border-color: var(--primary-color);
    color: white;
}
li.selection-mode.selected .todo-text {
    color: white;
    text-decoration: none;
}
li.selection-mode.selected .checkmark {
    border-color: white;
}


li.dragging {
  opacity: 0.5;
  border: 2px dashed var(--primary-color);
}

li.completed .todo-text {
  text-decoration: line-through;
  color: var(--text-secondary-color);
}

.swipeable-content {
    display: flex;
    align-items: center;
    padding: 16px 20px;
    background: var(--bg-secondary-color);
    width: 100%;
    z-index: 2;
    flex-grow: 1;
    position: relative;
    transition: background-color 0.2s ease;
}
li.selected .swipeable-content {
    background: transparent;
}


.swipe-actions-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    justify-content: space-between;
    align-items: center;
    z-index: 1;
}

.swipe-action {
    display: flex;
    align-items: center;
    justify-content: center;
    height: 100%;
    width: 80px;
    color: white;
}
.swipe-action.left {
    background-color: var(--danger-color);
    justify-content: flex-start;
    padding-left: 28px;
}
.swipe-action.right {
    background-color: var(--success-color);
    justify-content: flex-end;
    padding-right: 28px;
}

.todo-text-with-streak {
  flex-grow: 1;
  display: flex;
  align-items: center;
